<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POSMovil.AddUserPage">
    <ContentPage.Content>
        <StackLayout Padding="12">
            <Label Text="Nombre"/>
            <Entry x:Name="BoxNombre" Text="{Binding Nombre}"/>
            <Label Text="Usuario"/>
            <Entry x:Name="BoxUsuario" Text="{Binding Id}"/>
            <Label Text="Password"/>
            <Entry x:Name="BoxPassword" IsPassword="True" Text="{Binding Password}"/>
            <Label Text="Permisos"/>
            <Entry x:Name="BoxCmd_99" Text="{Binding Cmd_99}"/>
            <Label Text="Autorización"/>
            <Entry x:Name="BoxCmd_99_Acc" Text="{Binding Cmd_99_Acc}"/>
            <Button Text="Guardar" x:Name="BtnSave"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>